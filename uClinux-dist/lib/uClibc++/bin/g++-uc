#!/bin/bash

WRAPPER_INCLUDEDIR="${WRAPPER_INCLUDEDIR:=-I/usr/uClibc++/include/}"
WRAPPER_LIBDIR="${WRAPPER_LIBDIR:=-L/usr/uClibc++/lib/}"

WRAPPER_OPTIONS=""
WRAPPER_LIBS=" -L$MB_LINUX/tools/gcc4/bin/../lib/gcc/microblaze-xilinx-elf/4.1.2/ -lc -lgcc -Wl,--as-needed -lgcc_s -Wl,--no-as-needed"

WRAPPER_INCLIB="Y"
while [ -n "$1" ]
do
	WRAPPER_OPTIONS="$WRAPPER_OPTIONS $1"
	if [ "$1" = "-c" -o "$1" = "-E" -o "$1" = "-S" ]
	then
		WRAPPER_INCLIB="N"
	fi
	if [ "$1" == "-static" ]
	then
		WRAPPER_LIBS=" -L$MB_LINUX/tools/gcc4/bin/../lib/gcc/microblaze-xilinx-elf/4.1.2/ -lc -lgcc"
	fi
	shift
done
if [ "$WRAPPER_INCLIB" == "Y" ]
then
	WRAPPER_OPTIONS="$WRAPPER_OPTIONS -nodefaultlibs $WRAPPER_LIBDIR -luClibc++ $WRAPPER_LIBS"
fi

exec $MB_LINUX/uClinux-dist/tools/ucfront-g++ mb-g++ -fno-builtin -nostdinc++ -DGCC_HASCLASSVISIBILITY  $WRAPPER_INCLUDEDIR $WRAPPER_OPTIONS -D_GNU_SOURCE=1
